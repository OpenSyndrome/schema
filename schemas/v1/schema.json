{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Open Syndrome Case Definition Schema",
  "type": "object",
  "additionalProperties": false,
  "$defs": {
    "criterion": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "criteria",
            "syndrome",
            "symptom",
            "diagnosis",
            "diagnostic_test",
            "professional_judgment",
            "epidemiological_history",
            "demographic_criteria"
          ]
        },
        "logical_operator": {
          "type": "string",
          "enum": [
            "AND",
            "OR",
            "ANDNOT",
            "AT_LEAST"
          ]
        },
        "logical_operator_arguments": {
          "type": "array",
          "items": {
            "type": "integer"
          },
          "minItems": 1,
          "maxItems": 1
        },
        "name": {
          "type": "string"
        },
        "attribute": {
          "type": "string"
        },
        "value": {},
        "description": {
          "type": "string"
        },
        "operator": {
          "type": "string",
          "enum": [
            ">",
            ">=",
            "<",
            "<=",
            "==",
            "!=",
            "regex"
          ]
        },
        "regex_pattern": {
          "type": "string"
        },
        "regex_flags": {
          "type": "string",
          "pattern": "^[gimsuy]*$"
        },
        "code": {
          "type": "object",
          "properties": {
            "system": {
              "type": "string"
            },
            "code": {
              "type": "string"
            },
            "display": {
              "type": "string"
            }
          },
          "required": [
            "system",
            "code"
          ]
        },
        "values": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/$defs/criterion"
          }
        }
      },
      "required": [
        "type"
      ],
      "anyOf": [
        {
          "required": [
            "name"
          ]
        },
        {
          "required": [
            "values"
          ]
        }
      ]
    }
  },
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "scope": {
      "type": "string",
      "enum": [
        "specific",
        "broad"
      ],
      "description": "A broad definition aims to capture most or all true cases, while a specific definition provides a more accurate description but risks missing some true cases."
    },
    "category": {
      "type": "string",
      "enum": [
        "confirmed",
        "probable",
        "suspected"
      ],
      "default": "suspected",
      "description": "Case definition categories according to Bassil, K. (2008). Case definition. In Encyclopedia of epidemiology (Vol. 2, pp. 133-134). SAGE Publications, Inc., https://doi.org/10.4135/9781412953948"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Case definition version to be defined by the author but following the Semantic Versioning Specification (https://semver.org/)."
    },
    "open_syndrome_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Open Syndrome Definition schema version.",
      "examples": ["1.0.0"]
    },
    "published_in": {
      "type": "string",
      "format": "uri",
      "description": "URL where the narrative format definition was originally published or can be found."
    },
    "published_at": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time of publication at Open Syndrome Initiative website.",
      "examples": ["2020-05-30T12:00:00Z"]
    },
    "published_by": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of case definition authors",
      "examples": [["Ana Maria Braga"], ["Oswaldo Gonçalves Cruz", "Bento Gonçalves Cruz", "Amália Taborda de Bulhões Cruz"]]
    },
    "location": {
      "type": "string",
      "description": "Free text for location input; recommended format is 'City, State/Region, Country' following geographical hierarchy with comma separation",
      "examples": ["Salvador, Bahia, Brasil", "Berlin, Germany", "Nigeria"]
    },
    "language": {
      "type": "string",
      "description": "Written language",
      "examples": ["English", "Brazilian Portuguese"]
    },
    "organization": {
      "type": "string",
      "description": "The organization responsible for this case definition maintainance",
      "examples": ["Ministry of Health", "The Epidemic Intelligence from Open Sources Initiative"]
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "People or organizations that authored this case definition."
    },
    "inclusion_criteria": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/criterion"
      }
    },
    "exclusion_criteria": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/criterion"
      }
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Any notes that may be relevant to this case definition."
    },
    "references": {
      "description": "References which have supported this definition followed by a URL.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "citation": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "url"
        ]
      }
    },
    "status": {
      "type": "string",
      "description": "Current status of this definition in the Open Syndrome Initiative platform.",
      "enum": [
        "draft",
        "published",
        "deprecated"
      ],
      "default": "draft"
    },
    "keywords": {
      "description": "Keywords related to a definition.",
      "type": "array",
      "items": {
        "type": "string"
      },
      "examples": ["outbreaks", "covid19", "WHO"]
    }
  },
  "required": [
    "title",
    "scope",
    "category",
    "version",
    "open_syndrome_version",
    "published_in",
    "published_at",
    "location",
    "language",
    "organization",
    "inclusion_criteria",
    "references",
    "status"
  ]
}